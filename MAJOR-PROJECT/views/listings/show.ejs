<% layout("/layouts/boilerplate") %>

   <div class="row mt-4">
      <div class="col-lg-8 offset-lg-2">

         <h2 class="listing-title">
            <%= listing.title %>
         </h2>

         <div class="show-card">
            <div class="hero-image-container">
               <img src="<%= listing.image.url %>" class="hero-image" alt="listing image" loading="lazy">
            </div>

            <div class="card-body">
               <p class="card-text">
                  <i class="fa-solid fa-location-dot me-2"></i>
                  <%= listing.location %>, <%= listing.country %>
               </p>

               <p class="card-text">
                  <%= listing.description %>
               </p>

               <p class="card-text">
                  <strong>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></strong> / night
               </p>
            </div>
         </div>

         <div class="btns mb-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary edit-btn px-4">
               Edit Listing
            </a>

            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
               <button class="btn btn-dark px-4">
                  Delete Listing
               </button>
            </form>
         </div>
         <hr>
         <!-- review -->
         <div class="col-8 offset-3">
            <h4>Leave a review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
               <div class="mb-3 mt-3">
                  <label for="rating" class="form-label">Rating</label>
                  <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
               </div>
               <div class="mb-3 mt-3">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                     required></textarea>
                  <div class="invalid-feedback">
                     Please enter a comment.
                  </div>
               </div>
               <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <hr>
            <h4>All Reviews</h4>
            <% if (listing.reviews.length === 0) { %>
               <p>No reviews yet.</p>
            <% } else { %>
               <ul>
                  <% listing.reviews.forEach(review => { %>
                     <li>
                        <p><%= review.comment %></p>
                        <p><%= review.rating %> stars</p>
                     </li>
                  <% }) %>
               </ul>
            <% } %>
         </div>

      </div>
   </div>