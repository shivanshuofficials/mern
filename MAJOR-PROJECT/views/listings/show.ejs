<% layout("/layouts/boilerplate") %>

   <div class="row mt-4">
      <div class="col-lg-8 offset-lg-2">

         <h2 class="listing-title">
            <%= listing.title %>
         </h2>

         <div class="show-card">
            <div class="hero-image-container">
               <img src="<%= listing.image.url %>" class="hero-image" alt="listing image" loading="lazy">
            </div>

            <div class="card-body">
               <p class="card-text">
                  <i class="fa-solid fa-location-dot me-2"></i>
                  <%= listing.location %>, <%= listing.country %>
               </p>

               <p class="card-text">
                  <%= listing.description %>
               </p>

               <p class="card-text">
                  <strong>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></strong> / night
               </p>
            </div>
         </div>

         <div class="btns mb-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary edit-btn px-4">
               Edit Listing
            </a>

            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
               <button class="btn btn-dark px-4">
                  Delete Listing
               </button>
            </form>
         </div>
         <hr>
         <!-- review -->
         <div class="col-8 offset-3">
            <h4>Leave a review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
               <div class="mb-3 mt-3">
                  <label class="form-label">Rating</label>
                  <fieldset class="star-rating-input">
                     <input type="radio" id="star5" name="review[rating]" value="5" />
                     <label for="star5" title="5 stars"><i class="fa-solid fa-star"></i></label>
                     <input type="radio" id="star4" name="review[rating]" value="4" />
                     <label for="star4" title="4 stars"><i class="fa-solid fa-star"></i></label>
                     <input type="radio" id="star3" name="review[rating]" value="3" />
                     <label for="star3" title="3 stars"><i class="fa-solid fa-star"></i></label>
                     <input type="radio" id="star2" name="review[rating]" value="2" />
                     <label for="star2" title="2 stars"><i class="fa-solid fa-star"></i></label>
                     <input type="radio" id="star1" name="review[rating]" value="1" />
                     <label for="star1" title="1 star"><i class="fa-solid fa-star"></i></label>
                  </fieldset>
               </div>
               <div class="mb-3 mt-3">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                     required></textarea>
                  <div class="invalid-feedback">
                     Please enter a comment.
                  </div>
               </div>
               <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <h4 class="mb-4">All Reviews</h4>
            <% if (listing.reviews.length===0) { %>
               <div class="alert alert-info" role="alert">
                  <i class="fa-solid fa-info-circle me-2"></i>No reviews yet. Be the first to review!
               </div>
               <% } else { %>
                  <div class="row">
                     <% listing.reviews.forEach(review=> { %>
                        <div class="col-md-5 ms-3 mb-3">
                           <div class="card review-card shadow-sm h-100">
                              <div class="card-body">
                                 <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="d-flex align-items-center">
                                       <div class="review-avatar me-3">
                                          <i class="fa-solid fa-circle-user fa-2x text-secondary"></i>
                                       </div>
                                       <div>
                                          <h6 class="card-subtitle mb-1 text-muted">User</h6>
                                          <div class="review-rating">
                                             <% for(let i=0; i < 5; i++) { %>
                                                <% if(i < review.rating) { %>
                                                   <i class="fa-solid fa-star text-warning"
                                                      style="font-size: 0.8rem;"></i>
                                                   <% } else { %>
                                                      <i class="fa-regular fa-star text-warning"
                                                         style="font-size: 0.8rem;"></i>
                                                      <% } %>
                                                         <% } %>
                                          </div>
                                       </div>
                                    </div>
                                    <form method="POST"
                                       action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                       class="d-inline">
                                       <button class="btn btn-sm btn-outline-danger border-0" title="Delete review">
                                          <i class="fa-solid fa-trash"></i>
                                       </button>
                                    </form>
                                 </div>
                                 <p class="card-text mt-2">
                                    <%= review.comment %>
                                 </p>
                              </div>
                           </div>
                        </div>
                        <% }) %>
                  </div>
                  <% } %>
         </div>

      </div>
   </div>