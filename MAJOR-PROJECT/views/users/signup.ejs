<% layout("/layouts/boilerplate") %>

    <div class="auth-container">
        <div class="split-card">
            <!-- Left Side: Form -->
            <div class="auth-left">
                <div class="auth-header">
                    <h1 class="auth-title">Sign up to Wanderlust</h1>
                    <p class="auth-subtitle">Start your journey today</p>
                </div>

                <!-- Social Login Placeholders -->
                <div class="social-buttons">
                    <a href="/auth/facebook" class="social-btn" title="Facebook"><i class="fa-brands fa-facebook-f"
                            style="color: #1877F2;"></i></a>
                    <a href="/auth/google" class="social-btn" title="Google"><i class="fa-brands fa-google"
                            style="color: #DB4437;"></i></a>
                    <a href="/auth/apple" class="social-btn" title="Apple"><i class="fa-brands fa-apple"></i></a>
                </div>

                <div class="divider">or do via email</div>

                <form action="/signup" method="POST" class="auth-form needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="visually-hidden-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                            required>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="visually-hidden-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email address"
                            required>
                        <div class="invalid-feedback">
                            Please provide a valid email.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="visually-hidden-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                            required>
                        <div class="invalid-feedback">
                            Please provide a password.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-primary-auth">
                        Sign up
                    </button>
                </form>

                <div class="auth-footer">
                    Have an account? <a href="/login">Sign In</a>
                </div>
            </div>

            <!-- Right Side: Video -->
            <div class="auth-right">
                <video class="auth-video" autoplay loop muted playsinline>
                    <source
                        src="https://res.cloudinary.com/dha50uhkq/video/upload/v1768034140/wanderlust_assets/login_bg_video.mp4"
                        type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>

    <script>
        // Bootstrap validation script
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>